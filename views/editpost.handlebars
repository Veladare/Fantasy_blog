<div class="container mt-5">
  <h2 class="mb-4">Update and Delete Post</h2>
  <h1 class="mb-4">Edit Post</h1>
  <form class="update-post-form" class="mb-3">
    <div class="mb-3">
      <label for="title-update-post" class="form-label">Title</label>
      <input
        type="text"
        class="form-control"
        id="title-update-post"
        placeholder="Enter post title"
        value="{{title}}"
      />
    </div>
    <div class="mb-3">
      <label for="text-update-post" class="form-label">Text</label>
      <textarea
        class="form-control"
        id="text-update-post"
        rows="3"
        placeholder="Enter post text"
      >{{text}}</textarea>
    </div>
    <button type="submit" id="update-post" class="btn btn-primary">Update Post</button>
    <button type="button" id="delete-post" class="btn btn-danger">Delete Post</button>
  </form>
</div>

<script src="/JS/editpost.js"></script>