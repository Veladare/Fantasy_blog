<div class="container mt-5">
  <article>
    <h2>{{title}}</h2>
    <p>Created by: {{user.name}} | Date: {{format_date createdAt}}</p>
    <p>{{text}}</p>
    <h3>Comment History:</h3>
  {{#each comments}}
    <div class="comment mb-3">
      <div class="card">
        <div class="card-body">
          <p class="card-text">{{comment_text}}</p>
          <p class="card-subtitle mb-2 text-muted">By {{user.name}} on {{format_date createdAt}}</p>
        </div>
      </div>
    </div>
  {{/each}}
  {{#if logged_in}}
  </article>
    <form class="comment-form" class="mb-3">
      <div class="mb-3">
        <label for="comment" class="form-label">Add a Comment:</label>
        <textarea
          class="form-control"
          id="content"
          rows="3"
        ></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  {{/if}}  
</div>

<script src="/JS/comment.js"></script>